@model MyPersonalPage.Web.ViewModels.Comments.OutputViewModels.AllLatestCommentsViewModel
@using MyPersonalPage.Data.Models
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@{
    ViewData["Title"] = "Photography";
}

<h2 class="text-center mb-5">My latest photography</h2>

<div class="row">
    <div class="col-md-3">
        <blockquote class="blockquote text-center">
            <p class="mb-0">
                “The best thing about a picture is that it never changes, even when the people in it
                do.”
            </p>
            <footer class="blockquote-footer"><cite>Andy Warhol</cite></footer>
        </blockquote>
    </div>
    <div class="col-md-6">
        <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
                <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
                <li data-target="#carouselExampleCaptions" data-slide-to="3"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="https://res.cloudinary.com/dzheivzqv/image/upload/v1605479587/black_sea_qzu9gm.jpg"
                         class="d-block w-100" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Black sea</h5>
                        <p>Fanatastic view 2017</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="https://res.cloudinary.com/dzheivzqv/image/upload/v1605479587/miami_ftsxxe.jpg"
                         class="d-block w-100" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Miami, Florida</h5>
                        <p>Top destination</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="https://res.cloudinary.com/dzheivzqv/image/upload/v1605479587/eiffeltower_kjgh5k.jpg"
                         class="d-block w-100" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Eiffel Tower</h5>
                        <p>On my holiday vacantion 2015</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="https://res.cloudinary.com/dzheivzqv/image/upload/v1605479587/vitosha_xpmgb8.jpg"
                         class="d-block w-100" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Vitosha mountain</h5>
                        <p>Walking in the mountain</p>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <div class="col-md-3">
        <blockquote class="blockquote text-center">
            <p class="mb-0">
                “The picture that you took with your camera is the imagination you want to create
                with reality.”
            </p>
            <footer class="blockquote-footer"><cite>Scott Lorenzo</cite></footer>
        </blockquote>
    </div>
</div>

<div class="row mt-5">
    <div>
        <blockquote class="blockquote text-center">
            <p class="mb-0">
                “To me, photography is an art of observation.
                It’s about finding something interesting an ordinary place…
                I’ve found it has little to do with the things you see and everything to do with the way you see
                them.”
            </p>
            <footer class="blockquote-footer"><cite>Elliott Erwitt</cite></footer>
        </blockquote>
    </div>
</div>

<hr class="my-4">

<div class="row">
    <div class="col-md-2">

    </div>
    <div class="col-md-5">
        <h4 class="text-center">Latest 10 comments</h4>
    </div>
    <div class="col-md-5">
        <a asp-controller="Comments" asp-action="Create" class="btn btn-success">Add comment</a>
        @if (this.SignInManager.IsSignedIn(this.User))
        {
            <a asp-controller="Comments" asp-action="MyUsername" class="btn btn-info">Comments with my username</a>
        }
    </div>
</div>
<hr />

@foreach (var comment in Model.Comments)
{
    <div class="row">
        <div class="col-md-3">

        </div>
        <div class="col-md-6">
            <div class="card mt-3">
                <div class="card-header">
                    @comment.Username
                </div>
                <div class="card-body">
                    <h5 class="card-text">@comment.Content</h5>
                    <p class="card-text">Created on: @comment.CreatedOn.ToString("MM/dd/yyyy hh:mm tt")</p>
                </div>
            </div>
        </div>
    </div>
}
